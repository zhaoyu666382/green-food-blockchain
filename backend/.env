# 应用配置
APP_NAME=绿色食品交易平台
VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///./green_food.db

# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/green_food

# MySQL (生产环境)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/green_food

# JWT配置
SECRET_KEY=your-secret-key-please-change-this-in-production-environment
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 区块链配置
BLOCKCHAIN_NETWORK=fabric
BLOCKCHAIN_CHANNEL=green-food-channel

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=app.log
